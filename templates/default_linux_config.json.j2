{
  "agent": {
    "omit_hostname": false,
    "logfile": ""
  },
  "metrics": {
    "metrics_collected": {
      "cpu": {
        "measurement": [
          "usage_active",
          "usage_user",
          "usage_system"
        ],
        "metrics_collection_interval": {{ METRICS_INTERVAL }}
      },
      "disk": {
        "measurement": [
          "free",
          "used",
          "total",
          "used_percent"
        ],
        "metrics_collection_interval": {{ METRICS_INTERVAL }}
      },
      "diskio": {
        "measurement": [
          "read_bytes",
          "write_bytes"
{% if ADVANCED_METRICS %}
          ,"read_time",
          "write_time",
          "iops_in_progress"
{% endif %}
        ],
        "metrics_collection_interval": {{ METRICS_INTERVAL }}
      },
      "mem": {
        "measurement": [
          "free",
          "used",
          "total",
          "available_percent"
        ],
        "metrics_collection_interval": {{ METRICS_INTERVAL }}
      },
      "net": {
        "measurement": [
          "bytes_recv",
          "bytes_sent"
{% if ADVANCED_METRICS %}
          ,
          "packets_sent",
          "packets_recv"
{% endif %}
        ],
        "metrics_collection_interval": {{ METRICS_INTERVAL }}
      }
    },
    "append_dimensions": {
      "InstanceId": "${aws:InstanceId}",
      "AutoScalingGroupName": "${aws:AutoScalingGroupName}"
    },
    "namespace": "{{ METRICS_NAMESPACE }}" 
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "/host-varlog/{{ LOGS_SERVERLOG_FILE }}",
            "log_group_name": "{{ LOGS_GROUP_NAME }}",
            "log_stream_name": "{local_hostname}-syslog",
            "timezone": "Local"
          }
        ]
      }
    },
    "force_flush_interval" : {{ METRICS_INTERVAL }}
  }   
}